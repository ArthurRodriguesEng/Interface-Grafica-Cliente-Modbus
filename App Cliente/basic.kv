#:kivy 1.11.1
<MyWidget>:
    GridLayout:
        id: grdL
        rows: 6
        cols: 4
        TextInput:
            id:T_ip
            text:'ip'
            size_hint_x: None
            width: 200
        TextInput:
            id:T_port
            text:'port'
            size_hint_x: None
            width: 200
        Button:
            id: bt_conectar
            text: 'Conectar'
            on_press: root.connect()
            size_hint_x: None
            width: 200
        Button:
            id: bt_limpar
            text: 'Limpar'
            on_press: T_ip.text = '' 
            on_press: T_port.text = ''
            size_hint_x: None
            width: 200
        Label:
            id:label
            text:"Saída"
            size_hint_x: None
            width: 200
        TextInput:
            id:T_endereco
            text:'Digite o endereço'
            on_focus: self.text = ''
            size_hint_x: None
            width: 200
        Button:
            id: bt_2
            text: 'bobina'
            size_hint_x: None
            on_press: root.LerDados(2)
            width: 200
        Button:
            id: bt_4
            text: 'Entrada Discreta'
            on_press: root.LerDados(4)
            size_hint_x: None
            width: 200
        Button:
            id: bt_3
            text: 'Registrador de Entrada'
            on_press: root.LerDados(3)
            size_hint_x: None
            width: 200
        Button:
            id: bt_1
            text: 'Registrador de Saida'
            on_press: root.LerDados(1)
            size_hint_x: None
            width: 200    
        CheckBox:  
            id:c_box


        
        
    

            
    

